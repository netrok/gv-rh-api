# application.yml.example
server:
  port: 8080

spring:
  datasource:
    url: jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:gv_rh}
    username: ${DB_USER:postgres}
    password: ${DB_PASS:postgres}
  jpa:
    open-in-view: false
    hibernate:
      ddl-auto: validate
    properties:
      hibernate.format_sql: true
      hibernate.jdbc.time_zone: UTC
  flyway:
    enabled: true
    locations: classpath:db/migration
  jackson:
    serialization:
      write-dates-as-timestamps: false
  web:
    resources:
      add-mappings: false

# JWT y seguridad (usa valores de entorno en prod)
app:
  jwt:
    # Clave HS256 en Base64 (32+ bytes). Ejemplo: export APP_JWT_SECRET=...
    secret: ${APP_JWT_SECRET:REEMPLAZA_CON_BASE64_DE_32+_BYTES}
    issuer: ${APP_JWT_ISSUER:gv-rh-api}
    access-minutes: ${APP_JWT_ACCESS_MIN:60}
    refresh-minutes: ${APP_JWT_REFRESH_MIN:43200}

springdoc:
  api-docs:
    enabled: true
    path: /v3/api-docs
  swagger-ui:
    path: /swagger-ui/index.html
    display-request-duration: true
    persist-authorization: true

# (Opcional) Actuator
management:
  endpoints:
    web:
      exposure:
        include: health,info
  endpoint:
    health:
      show-details: never
