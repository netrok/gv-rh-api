<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="empleados_simple" pageWidth="595" pageHeight="842" columnWidth="515"
              leftMargin="40" rightMargin="40" topMargin="40" bottomMargin="40"
              whenResourceMissingType="Empty" uuid="9c5c9db3-ef1f-45c5-a2b8-1ab0b59de111">

    <!-- Parámetros -->
    <parameter name="P_TITULO" class="java.lang.String"/>
    <parameter name="P_DEPARTAMENTO" class="java.lang.String"/>
    <parameter name="P_DESDE" class="java.lang.String"/>
    <parameter name="P_HASTA" class="java.lang.String"/>

    <!-- Campos (de las beans Row) -->
    <field name="numEmpleado" class="java.lang.String"/>
    <field name="nombre" class="java.lang.String"/>
    <field name="depto" class="java.lang.String"/>
    <field name="ingreso" class="java.time.LocalDate"/>

    <title>
        <band height="60">
            <textField>
                <reportElement x="0" y="0" width="515" height="24"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{P_TITULO}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="28" width="515" height="18"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[
"Departamento: " + ($P{P_DEPARTAMENTO} == null ? "Todos" : $P{P_DEPARTAMENTO})
+ ($P{P_DESDE} != null && $P{P_DESDE}.length() > 0 ? "  |  Desde: " + $P{P_DESDE} : "")
+ ($P{P_HASTA} != null && $P{P_HASTA}.length() > 0 ? "  |  Hasta: " + $P{P_HASTA} : "")
                ]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="18">
            <staticText>
                <reportElement x="0" y="0" width="90" height="18"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Núm.Empleado]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="0" width="190" height="18"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Nombre]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="110" height="18"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Departamento]]></text>
            </staticText>
            <staticText>
                <reportElement x="420" y="0" width="95" height="18"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Ingreso]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="18">
            <textField>
                <reportElement x="0" y="0" width="90" height="18"/>
                <textFieldExpression><![CDATA[$F{numEmpleado}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="100" y="0" width="190" height="18"/>
                <textFieldExpression><![CDATA[$F{nombre}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="110" height="18"/>
                <textFieldExpression><![CDATA[$F{depto}]]></textFieldExpression>
            </textField>
            <textField pattern="yyyy-MM-dd">
                <reportElement x="420" y="0" width="95" height="18"/>
                <textFieldExpression><![CDATA[$F{ingreso}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="18">
            <textField pattern="Page {0} of">
                <reportElement x="0" y="0" width="60" height="18"/>
                <textFieldExpression><![CDATA[new java.lang.Integer($V{PAGE_NUMBER})]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="60" y="0" width="455" height="18"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
